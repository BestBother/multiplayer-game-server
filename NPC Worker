import queue
import time
import Threading

NPC_queue = queue.Queue()

def process_NPC():
 while True:
        if not NPC_queue.empty():
        addr, action = NPC_queue.get()
        print(f"Processing NPC decision from {addr}: {action}")
        time.sleep(2) 
        print(f"NPC action completed for {addr}")

NPC_worker = threading.Thread(target=process_NPC)
NPC_worker.start()

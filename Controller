import socket
import threading
import queue

HOST = '127.0.0.1'
PORT = 2368


physics_queue = queue.Queue()
NPC_queue = queue.Queue()
Score_queue = queue.Queue()

def handle_client(conn, addr):
    print(f"Player {addr} connected")

    while True:
        try:
            data = conn.recv(1024).decode()
            if not data:
                break
            
            print(f"Received action from {addr}: {data}")

            if "move" in data:
                physics_queue.put((addr, data))
            elif "attack" in data:
                NPC_queue.put((addr, data))
            elif "score" in data:
                Score_queue.put((addr, data))

            conn.sendall(f"Action received: {data}".encode())

        except:
            print(f"Player {addr} disconnected")
            break

    conn.close()


server = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
server.bind((HOST, PORT))
server.listen()

print(f"Game Server running on {HOST}:{PORT}")

while True:
    conn, addr = server.accept()
    threading.Thread(target=handle_client, args=(conn, addr)).start()
